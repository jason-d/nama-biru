extends layout

block content
    h1 Search
    
    form(id='form', method='post', action='/search')
        label(for='name') Name:
        input(id='name', name='name')
        
        button.btn.btn-success.text-center(type='submit') Search
    
    if (beers != null && beers.length > 0)
        table.table.table-striped
            thead
                tr
                    th Name
                    th Brewery
            tbody
                each beer in beers
                    tr
                        td #{beer.name} 
                        td #{beer.brewery.name}